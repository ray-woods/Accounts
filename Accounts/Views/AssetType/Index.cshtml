@model Accounts.Models.AssetType.AssetTypesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Asset Types</h2>

<p>
    @Html.ActionLink("Create New Asset Type", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssetTypes[0].AssetTypeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssetTypes[0].Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AssetTypes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssetTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AssetTypeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AssetTypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AssetTypeID }, new { @class = "deleteAssetType" })
            </td>
        </tr>
    }

</table>

@section Scripts {
    <script type="text/javascript">

        $(function () {

            $('.deleteAssetType').on('click', function (e) {
                var ok = confirm("Are you sure you want to delete this Asset Type?");
                if (ok === false)
                    e.preventDefault();
            });

        });

    </script>
}
